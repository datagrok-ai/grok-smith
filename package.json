{
  "name": "datagrok-apps",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "app-host"
  ],
  "scripts": {
    "dev:send": "npm run dev --workspace=apps/send",
    "dev:grit": "npm run dev --workspace=apps/grit",
    "dev:dbx": "npm run dev --workspace=apps/dbx",
    "dev:app-host": "npm run dev --workspace=app-host",
    "typecheck": "tsc --build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d postgres"
  },
  "devDependencies": {
    "typescript": "^5.4",
    "eslint": "^8.57",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.5"
  }
}
