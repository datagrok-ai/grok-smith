{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@datagrok/app-core": ["../../packages/app-core/src"],
      "@datagrok/app-core/*": ["../../packages/app-core/src/*"],
      "@datagrok/app-kit": ["../../packages/app-kit/src"],
      "@datagrok/app-kit/*": ["../../packages/app-kit/src/*"],
      "@datagrok/core-schema": ["../../packages/core-schema/src"],
      "@datagrok/core-schema/*": ["../../packages/core-schema/src/*"],
      "@datagrok/server-kit": ["../../packages/server-kit/src"],
      "@datagrok/server-kit/*": ["../../packages/server-kit/src/*"]
    }
  },
  "include": ["client/src", "client/*.ts", "server"],
  "references": [
    { "path": "../../packages/app-core" },
    { "path": "../../packages/app-kit" },
    { "path": "../../packages/core-schema" },
    { "path": "../../packages/server-kit" }
  ]
}
